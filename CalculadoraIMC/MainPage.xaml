<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC.MainPage"
             Visual="Material">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250">
        <Label Text="Calcula tu IMC" FontAttributes="Bold" FontSize="50" HorizontalTextAlignment="Center" TextColor="Gray"/>
        <Entry Placeholder="Altura" Keyboard="Numeric" x:Name="Altura"/>
        <Entry Placeholder="Peso" Keyboard="Numeric" x:Name="Peso"/>
        <Entry Placeholder="Tu IMC" IsReadOnly="True" x:Name="IMC"/>
        <Button Text="Calcular" Clicked="Button_Clicked" BackgroundColor="AntiqueWhite"/>
    </StackLayout>
</ContentPage>
